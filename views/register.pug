extends application.pug

block content
  
  div(class="container-fluid")
    div(class="row")
      div(class="jumbotron" id="upload-image")
        div(class="container")
          h1 FindTrails
  
    div(class="row" id="register-header")
      h3 Sign up to share and find GPX files for the best trailruns and hikes!
      div(class="col-md-6 col-md-offset-3")
        div(class="form-area" class="box-shadow")
          form(id="register" action="/register" method="post")
            br(style="clear:both")
            h3(style="margin-bottom: 25px; text-align: center;") Sign up
            div(class="form-group")
              label(for="Email") Email
              input(placeholder="Your email" name="email" id="email" type="email" class="validate" required)
            div(class="form-group")
              label(for="Name") Username
              input(placeholder="your name" name="username" id="username" type="text" class="validate" required)
            div(class="form-group")
              label(for="Level") Password   
              input(placeholder="Your password" name="password" id="password" type="password" class="validate" required)
            button(type="submit" name="action" class="btn btn-primary pull-right") Submit
          p(id="thanks")

  include ./footer.pug
